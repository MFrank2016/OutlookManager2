# ============================================================================
# Outlook邮件管理系统 - 环境配置示例
# ============================================================================
# 将此文件复制为 .env 并根据实际情况修改配置值

# 基础配置
ENV=development
DEBUG=True
APP_NAME=OutlookManager
APP_VERSION=3.0.0

# 数据库配置
DATABASE_URL=sqlite+aiosqlite:///./outlook_manager.db
DATABASE_ECHO=False

# JWT配置
JWT_SECRET_KEY=your-secret-key-change-this-in-production-must-be-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth配置
OAUTH_TOKEN_URL=https://login.microsoftonline.com/common/oauth2/v2.0/token
OAUTH_SCOPE=https://outlook.office365.com/IMAP.AccessAsUser.All https://outlook.office365.com/SMTP.Send offline_access
OAUTH_TIMEOUT=30

# IMAP配置
IMAP_SERVER=outlook.office365.com
IMAP_PORT=993
IMAP_CONNECTION_TIMEOUT=30

# 缓存配置
CACHE_TTL=300
# REDIS_URL=redis://localhost:6379/0  # 可选，如需使用Redis

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FILE=outlook_manager.log
LOG_RETENTION_DAYS=7

# 速率限制
RATE_LIMIT_PER_MINUTE=60

# Token刷新配置
TOKEN_REFRESH_INTERVAL_DAYS=7

